<h2 class="header"><i class="fa fa-bolt"></i></h2>
<div class="notice"><p>"<%= @message %>"</p></div><!-- Notice -->

<h2 class="menu-header">pick a deck, any deck</h2>

<div class="index_container">
  <div class="deck-container">
    <% @decks.each do |deck| %>
    <a href ="/decks/<%= deck.id %>/cards">
      <div class="deck">
        <div class="red-line"></div>
        <div class="blue-line"></div>
        <div class="blue-line"></div>
        <div class="blue-line"></div>
        <div class="blue-line"></div>
        <div class="blue-line"></div>
        <div class="blue-line"></div>
        <div class="blue-line"></div>
        <div class="blue-line"></div>
        <div class="deck-description">
          <p class="deck-title"><%= deck.title %></p>
          <p class="deck-body">cards: <%= deck.cards.count %></p>
        </div>
      </div><!-- Each deck container -->
    </a>
    <% end %>
  </div><!-- Deck List Container -->
</div><!-- Index container -->
